{
    "name": "@kirrus/compose",
    "version": "1.0.0",
    "description": "Type-safe middleware composition utility for the Kirrus framework",
    "repository": "https://github.com/kirusuu/compose",
    "author": "BlueGhostGH <engisoftleaderoff@gmail.com>",
    "license": "Unlicense",
    "main": "dist/bundle.cjs.js",
    "module": "dist/bundle.esm.js",
    "browser": "dist/bundle.umd.js",
    "typings": "dist/bundle.esm.d.ts",
    "files": [
        "dist"
    ],
    "sideEffects": false,
    "publishConfig": {
        "access": "public"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.1",
        "@rollup/plugin-commonjs": "^14.0.0",
        "@rollup/plugin-node-resolve": "^8.4.0",
        "@semantic-release/changelog": "^5.0.1",
        "@semantic-release/git": "^9.0.0",
        "@types/chai": "^4.2.12",
        "@types/mocha": "^8.0.2",
        "@typescript-eslint/eslint-plugin": "^3.9.0",
        "@typescript-eslint/parser": "^3.9.0",
        "@wessberg/rollup-plugin-ts": "^1.3.2",
        "chai": "^4.2.0",
        "cross-env": "^7.0.2",
        "dotenv": "^8.2.0",
        "eslint": "^7.6.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-config-standard": "^14.1.1",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "mocha": "^8.1.1",
        "nodemon": "^2.0.4",
        "nyc": "^15.1.0",
        "prettier": "^2.0.5",
        "rollup": "^2.23.1",
        "rollup-plugin-filesize": "^9.0.2",
        "rollup-plugin-terser": "^7.0.0",
        "semantic-release": "^17.1.1",
        "source-map-support": "^0.5.19",
        "typescript": "^4.0.0-beta"
    },
    "scripts": {
        "lint-check": "eslint \"**/*.+(js|json|ts)\"",
        "format-check": "prettier --check \"**/*.+(js|json|ts)\"",
        "check": "yarn format-check && yarn lint-check",
        "dev": "nodemon",
        "dry-run": "npx --node-arg=\"--require dotenv/config\" semantic-release --dry-run",
        "build": "rollup -c ./rollup.config.ts",
        "ts-test": "tsc --project ./tsconfig.test.json",
        "test": "yarn ts-test && cross-env NODE_ENV=test mocha \"test/**/*.test.js\" --exit"
    }
}
